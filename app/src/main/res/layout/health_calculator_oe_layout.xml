<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="?android:attr/textAppearanceMedium"
        android:text="Select date you expect your next menstrual period to start"/>

    <DatePicker
        android:layout_gravity="center_horizontal"
        android:id="@+id/dp4OE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="?android:attr/textAppearanceMedium"
        android:text="Select how many days you average from first day of one period to the first day of the next period"/>
    <Spinner
        android:id="@+id/spinner4OE"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>